<h1><%= title %></h1>

<% if (notice && notice.length) { %>
  <div class="notice">
    <% notice.forEach(msg => { %>
      <p><%= msg %></p>
    <% }) %>
  </div>
<% } %>


<form action="/account/login" method="post" class="account-form">
  <label for="account_email">Email:</label>
  <input
    type="email"
    id="account_email"
    name="account_email"
    required
    value="<%= typeof account_email !== 'undefined' ? account_email : '' %>"
  />

  <label for="account_password">Password:</label>
  <input
    type="password"
    id="account_password"
    name="account_password"
    required
  />

  <button type="submit">Login</button>
</form>

<p class="account-alt">
  No account?
  <a href="/account/register">Sign-up</a>
</p>
