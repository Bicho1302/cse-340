<main class="content account-page">
  <h1>Update Account</h1>

  <div class="account-section">
    <h2>Account Update</h2>

    <form method="post" action="/account/update">
      <label>
        First Name
        <input type="text" name="account_firstname" value="<%= accountData.account_firstname %>" required>
      </label>

      <label>
        Last Name
        <input type="text" name="account_lastname" value="<%= accountData.account_lastname %>" required>
      </label>

      <label>
        Email
        <input type="email" name="account_email" value="<%= accountData.account_email %>" required>
      </label>

      <button type="submit" class="account-btn">Update Account</button>
    </form>
  </div>

  <div class="account-section">
    <h2>Change Password</h2>

    <p>
      Password must be at least 12 characters and include 1 uppercase,
      1 lowercase, 1 number, and 1 special character.
    </p>

    <form method="post" action="/account/update-password">
      <label>
        New Password
        <input type="password" name="account_password" required>
      </label>

      <button type="submit" class="account-btn account-btn-danger">
        Change Password
      </button>
    </form>
  </div>
</main>
