<% if (notice && notice.length) { %>
  <div class="notice"><%= notice[0] %></div>
<% } %>

<h1>Add Classification</h1>

<p>Classification name cannot contain spaces or special characters.</p>

<% if (errors && errors.length) { %>
  <ul class="errors">
    <% errors.forEach(e => { %>
      <li><%= e.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form method="post" action="/inv/add-classification">
  <label for="classification_name">Classification Name</label>
  <input
    type="text"
    id="classification_name"
    name="classification_name"
    required
    pattern="[A-Za-z0-9]+"
    title="No spaces or special characters allowed"
    value="<%= classification_name || '' %>"
  />
  <button type="submit">Add Classification</button>
</form>
